<h1>Real Time Products</h1>

<div id="productsContainer" class="container"></div>

<div id="paginationButtons">
    <button id="prevPageButton">Página anterior</button>
    <button id="nextPageButton">Página siguiente</button>
</div>

{{!-- Agregar productos --}}

<h2>Agregar productos</h2>

<form>
    <input type="text" id="title" placeholder="Titulo">
    <input type="text" id="description" placeholder="Descripcion">
    <input type="text" id="code" placeholder="Codigo">
    <input type="number" id="price" placeholder="Precio">
    <input type="number" id="stock" placeholder="Stock">
    <input type="text" id="category" placeholder="Categoria">
    <input type="text" id="thumbnail" value="Sin imagen">
    <select id="status">
        <option value="true"> Activo </option>
    </select>
    <button id="btnSend"> Enviar </button>
</form>


<script src="https://cdn.socket.io/4.7.5/socket.io.min.js"></script>
<script src="js/realtime.js"></script>